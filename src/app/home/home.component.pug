nav-menu
#mainContent.container.main-content(tabindex="-1")
  //- for accessibility so that page has title
  h1.hidden Artstor Home Page
  
  .row.my-4
    .col-sm-4
      h3.browse-category {{ 'Art and Visual Resources' | translate }}
      p.small(*ngIf="siteID=='SAHARA'", [innerHtml]="'HOME.CONTENT_ACCESS.SAHARA' | translate")
      p.small(*ngIf="siteID!='SAHARA'", [innerHtml]="'HOME.CONTENT_ACCESS.USER' | translate")
    .col-sm-5.search-highlight
      ang-search
  .row
    .col-sm-8
      a#featuredCollectionLink.card.featured-card(#featuredCollection="", [attr.href]="featuredCollectionConf + '.0.LINK' | translate")
        img.card-img-top.no-stretch([attr.src]="featuredCollectionConf + '.COLLECTIONS.0.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.0.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.0.LINK_TITLE' | translate")

        .card-body.pt-2
          label(*ngIf="user.isLoggedIn" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.INST' | translate")
          label(*ngIf="!user.isLoggedIn" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.PUBLIC' | translate")

        //-   p(style="margin-bottom:6px;", [innerHtml]="featuredCollectionConf + '..0.SUBHEADING' | translate")
        //- div.featured-caption([innerHtml]="featuredCollectionConf + '..0.DESCRIPTION' | translate")
    .col-sm-4
      //-.card-group
      .card
        img.no-stretch([attr.src]="featuredCollectionConf + '.COLLECTIONS.0.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.0.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.0.LINK_TITLE' | translate")
      .card        
        img.no-stretch([attr.src]="featuredCollectionConf + '.COLLECTIONS.1.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.1.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.1.LINK_TITLE' | translate")
      .card  
        img.no-stretch([attr.src]="featuredCollectionConf + '.COLLECTIONS.2.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.2.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.2.LINK_TITLE' | translate")

      a.link(*ngIf="user.isLoggedIn" href="/browse/institution" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.VIEW_ALL_LINK' | translate")
      a.link(*ngIf="!user.isLoggedIn" href="/browse/commons" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.VIEW_PUBLIC_LINK' | translate")

    .row
      .col-sm-3
        //- .webinar-ad
        //-   h2 Webinar
        //-   p Artstor essentials 
        //-     br 
        //-     | 30-minute mastery

        //-   p January 30, 2018 3:00PM
        //-   p Sign up today!
        a#imageAdSpaceLink.card.hidden-xs-down(*ngIf="showHomeAd", [attr.href]=" 'HOME.AD.LINK' | translate ", target="_blank")
            img.card-img.no-stretch([attr.src]="'HOME.AD.IMG_SOURCE' | translate", [attr.alt]="'HOME.AD.ALT_TEXT' | translate")
        .card([class.pt-4]="showHomeAd")

      .col-sm-6
        .card(*ngIf="showBlog")
          .card-header
            h1([innerHtml]="'HOME.HEADINGS.FRM_BLOG' | translate")
          .loading(*ngIf="blogLoading")
          div(*ngIf="!blogLoading")
            a.blog-post(*ngFor="let post of blogPosts | slice:0:3", [href]="post['URL']", target="_blank")
              h3.blog-post__title([innerHtml]="post.title")
              p.blog-post__preview([innerHtml]="post.excerpt")
      .col-sm-3
        //- Institution Shared Shelf Collections
        .card(*ngIf="institution && instCollections.length > 0")
          .card-header
            h1 {{ 'HOME.HEADINGS.INSTITUTION_COLLECTIONS' | translate:{ institutionName: institution.shortName ? institution.shortName : 'Institutional' } }}
          .list--home-collections([class.loading]="loaders['instCollections']")
            .list-group.list-group-flush
              a.list-group-item.list-group-item-action(*ngFor="let collection of instCollections", [routerLink]="[ '/collection', collection.collectionid ]")
                span.notranslate  {{ collection.collectionname }}
          .card-block(*ngIf="errors.instCollections")
            #errorCollectionsLoading.alert.alert-warning(role="alert")
              strong Error
                | {{ errors.instCollections }}
        

        .card-header
        h3 {{ 'HOME.QUESTIONS.HEADING' | translate }}
        ul.list-group.list-group-flush.list-group-clean(*ngIf="siteID=='ARTSTOR'")
          a#linkEmailInstitutionContact.list-group-item.small([href]="institution.institutionContact && institution.institutionContact[0] && institution.institutionContact[0].email ? 'mailto:' + institution.institutionContact[0].email : 'mailto:userservices@artstor.org'") {{ 'HOME.QUESTIONS.EMAIL_INSTITUTION' | translate }}
          a#linkEmailArtstor.list-group-item.small([href]="artStorEmailLink") {{ 'HOME.QUESTIONS.EMAIL_ARTSTOR' | translate }}
          a#linkArtstorWebinar.list-group-item.small(href="http://www.artstor.org/webinars?view=ADL", target="_blank") {{ 'HOME.QUESTIONS.WEBINAR' | translate }}
          a#linkArtstorSurvey.list-group-item.small(href="https://www.surveymonkey.com/r/TW9SKC6", target="_blank") {{ 'HOME.QUESTIONS.SURVEY' | translate }}
          li#itemArtstorAccess.list-group-item.small(*ngIf="institution.displayName") {{ 'HOME.ACCESS_PROVIDED_BY' | translate }}
            br
            b {{ institution.displayName }}
        ul.list-group.list-group-flush.list-group-clean(*ngIf="siteID=='SAHARA'")
          li.list-group-item.small
            a.link--action(href="mailto:sahara@sah.org", [innerHtml]="'HOME.QUESTIONS.SAHARA_QUESTIONS' | translate")
          li.list-group-item.small
            a.link--action(href="mailto:support@artstor.org", [innerHtml]="'HOME.QUESTIONS.ARTSTOR_QUESTIONS' | translate") 
