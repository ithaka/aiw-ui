.row#featured-container
  .col-sm-8.featured-col
    a#featuredCollectionLink.card.featured-card(#featuredCollection="", [attr.href]="featuredCollectionConf + '.COLLECTIONS.0.LINK' | translate")
      img.card-img-top.no-stretch(*ngIf="showInstFeatured", [attr.src]="featuredCollectionConf + '.COLLECTIONS.0.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.0.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.0.LINK_TITLE' | translate")
      img.card-img-top.no-stretch(*ngIf="showPublicFeatured", [attr.src]="featuredCollectionConf + '.SAHARA_COLLECTIONS.0.IMG_SOURCE' | translate", [attr.alt]="featuredCollectionConf + '.COLLECTIONS.0.ALT_TEXT' | translate", [attr.title]="featuredCollectionConf + '.COLLECTIONS.0.LINK_TITLE' | translate")
    .card-body.pt-2
      label(*ngIf="user.isLoggedIn" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.INST' | translate")
      label(*ngIf="!user.isLoggedIn" style="margin-bottom:0px;", [innerHtml]="featuredCollectionConf + '.HEADINGS.PUBLIC' | translate")

