.modal.fade-in(id="modal")
  .modal-dialog(role="document", focusTrap)
    .modal-content
      .modal-header
        h4.modal-title(#loginRequiredHeader, tabindex="0",) {{ 'LOGIN_REQUIRED_MODAL.HEADING' | translate }}
        button.close(type="button", (click)="closeModal.emit()", aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        p(*ngIf="!_auth.isPublicOnly()", [innerHtml]="'LOGIN_REQUIRED_MODAL.PROMPT' | translate")
        p(*ngIf="_auth.isPublicOnly()", [innerHtml]="'LOGIN_REQUIRED_MODAL.PROMPT_NO_REGISTER' | translate")
      .modal-footer
        button.btn.btn-secondary(type="button", (click)="closeModal.emit()") Cancel
        button.btn.btn-primary((click)="goToLogin()") Log In
