.modal.fade-in.show
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h4.modal-title([innerHtml]="'Complete your Profile' | translate")
        button.close(type="button", (click)="dismissModal()", aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        p([innerHtml]="'You&apos;re a...' | translate")
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'Undergraduate Student' | translate }}
        br
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'Graduate Student' | translate }}
        br
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'Instructor/Faculty' | translate }}
        br
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'K-12 Teacher' | translate }}
        br
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'Librarian' | translate }}
        br
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'Other' | translate }}
        br
        a.link.btn-link((click)="dismissModal()") {{ 'No thanks' | translate }}