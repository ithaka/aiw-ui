.modal.fade.show
  .modal-dialog([ngClass]="{ 'edit-mode': editMode }", role="document")
    .modal-content
      .modal-header
        h5.modal-title {{ 'EDIT_PC_MODAL.TITLE' | translate }}
        //- a.btn.btn-link.help(href="http://support.artstor.org/?article-category=09-using-your-own-images", target="_blank") {{ 'EDIT_PC_MODAL.HELP' | translate }}
        button.close((click)="closeModal.emit()", type="button", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        .row.no-gutters
          .form-group.has-danger(
            *ngIf="uiMessages.imgUploadFailure || uiMessages.imgDeleteFailure"
          )
            .form-control-feedback(*ngIf="uiMessages.imgUploadFailure") {{ 'EDIT_PC_MODAL.MESSAGES.IMG_UPLOAD_FAILURE' | translate }}
            .form-control-feedback(*ngIf="uiMessages.imgDeleteFailure") {{ 'EDIT_PC_MODAL.MESSAGES.IMG_DELETE_FAILURE' | translate }}
          .form-group.has-success(
            *ngIf="uiMessages.imgUploadSuccess || uiMessages.imgDeleteSuccess"
          )
            .form-control-feedback(*ngIf="uiMessages.imgUploadSuccess") {{ 'EDIT_PC_MODAL.MESSAGES.IMG_UPLOAD_SUCCESS' | translate }}
            .form-control-feedback(*ngIf="uiMessages.imgDeleteSuccess") {{ 'EDIT_PC_MODAL.MESSAGES.IMG_DELETE_SUCCESS' | translate }}
        .row.no-gutters
          .thmb-cntnr([ngClass]="{ 'col-md-6': editMode, 'col-md-12': !editMode }")
            ang-uploader((fileUploaded)="handleNewAssetUpload($event)")
            .lbl.mt-4(*ngIf="collectionAssets && collectionAssets.length > 0") {{ 'EDIT_PC_MODAL.RECENT_TITLE' | translate }}
              .thumb-preview-cntnr
                .row.no-gutters
                  .col-md-4.thumb([ngClass]="{ 'selected': selectedAsset && (selectedAsset.ssid === asset.ssid)}", *ngFor="let asset of collectionAssets")
                    img([attr.src]="asset.src", [attr.alt]="asset.name ? 'Thumbnail of ' + asset.name : 'No title available'")
                    .thumb-overlay((click)="editAssetMeta( asset )")
              .info-lbl {{ 'EDIT_PC_MODAL.META_ADD_INFO' | translate }}
              .modal-footer(*ngIf="!editMode")
                .alert.alert-info {{ 'EDIT_PC_MODAL.UPLOAD_TIME_DISCLAIMER' | translate }}
                .form-group
                  button.btn.btn-primary((click)="closeModal.emit()", type="button") {{ 'EDIT_PC_MODAL.BUTTONS.DONE' | translate }}
          .edit-cntnr.col-md-6(*ngIf="selectedAsset && editMode")
            //- if the image was just uploaded, we won't have metadata, so just use the blob data
            img.w-100.mb-2(
              *ngIf="selectedAsset && !selectedAsset.artstorid",
              [attr.src]="selectedAsset.src"
            )
            form#editAssetMetaForm([formGroup]="editAssetMetaForm", (ngSubmit)="editMetaFormSubmit(editAssetMetaForm.value)")
              .form-group
                label(for="assetCreatorInput") {{ 'EDIT_PC_MODAL.FORM.CREATOR' | translate }}
                input#assetCreatorInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['creator']", tabindex="1")
              .form-group([class.has-danger]="submitted && !editAssetMetaForm.controls['title'].valid")
                label(for="assetTitleInput") {{ 'EDIT_PC_MODAL.FORM.TITLE' | translate }}
                input#assetTitleInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['title']", tabindex="1")
                .form-control-feedback(*ngIf="submitted && editAssetMetaForm.controls['title'].hasError('required')") {{ 'EDIT_PC_MODAL.FORM.TITLE_INVALID' | translate }}
              .form-group
                label(for="assetWrkTypInput") {{ 'EDIT_PC_MODAL.FORM.WRK_TYP' | translate }}
                input#assetWrkTypInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['work_type']", tabindex="1")
              .form-group
                label(for="assetDateInput") {{ 'EDIT_PC_MODAL.FORM.DATE' | translate }}
                input#assetDateInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['date']", tabindex="1")
              .form-group
                label(for="assetLocInput") {{ 'EDIT_PC_MODAL.FORM.LOCATION' | translate }}
                input#assetLocInput.form-control([formControl]="editAssetMetaForm.controls['location']", tabindex="1")
              .form-group
                label(for="assetMatInput") {{ 'EDIT_PC_MODAL.FORM.MATERIAL' | translate }}
                input#assetMatInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['material']", tabindex="1")
              .form-group
                label(for="assetDescInput") {{ 'EDIT_PC_MODAL.FORM.DESCRIPTION' | translate }}
                input#assetDescInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['description']", tabindex="1")
              .form-group
                label(for="assetSubjectInput") {{ 'EDIT_PC_MODAL.FORM.SUBJECT' | translate }}
                input#assetSubjectInput.form-control(type="text", [formControl]="editAssetMetaForm.controls['subject']", tabindex="1")
              .form-group.has-danger(
                *ngIf="uiMessages.metadataUpdateFailure"
              )
                .form-control-feedback(*ngIf="uiMessages.metadataUpdateFailure") {{ 'EDIT_PC_MODAL.MESSAGES.METADATA_UPDATE_FAILURE' | translate }}
              .form-group.has-success(
                *ngIf="uiMessages.metadataUpdateSuccess"
              )
                .form-control-feedback(*ngIf="uiMessages.metadataUpdateSuccess") {{ 'EDIT_PC_MODAL.MESSAGES.METADATA_UPDATE_SUCCESS' | translate }}
            .modal-footer
              .form-group
                button.btn.btn-danger.mr-2((click)="deleteAssetById(selectedAsset.ssid)", type="button", [class.loading]="deleteLoading") {{ 'EDIT_PC_MODAL.BUTTONS.DELETE' | translate }}
                button.btn.btn-secondary.mr-2((click)="clearSelectedAsset()", type="button") {{ 'EDIT_PC_MODAL.BUTTONS.CLOSE' | translate }}
                button.btn.btn-primary(type="submit", (click)="editMetaFormSubmit(editAssetMetaForm.value)", [class.loading]="metadataUpdateLoading") {{ 'EDIT_PC_MODAL.BUTTONS.SAVE' | translate }}
