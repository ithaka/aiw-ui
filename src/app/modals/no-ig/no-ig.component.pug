.modal.fade-in.show
  .modal-dialog(role="document")
    // modal content: Is deleted, now what?
    .modal-content
      .modal-header
        h4.modal-title([innerHtml]="'NO_IG.HEADING' | translate")
      .modal-body
        p(*ngIf="!noAccessIg", [innerHtml]="'NO_IG.NO_EXISTS' | translate")
        p(*ngIf="noAccessIg", [innerHtml]="'NO_IG.NO_ACCESS' | translate")
      .modal-footer
        a.btn.btn-secondary([routerLink]="['/browse', 'groups']") {{ 'BROWSE_GROUPS' | translate }}
        a.btn.btn-primary([routerLink]="['/home']") {{ 'RETURN_HOME' | translate }}
