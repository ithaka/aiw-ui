nav-menu([allowSelectAll]="true")
#mainContent.container.main-content(tabindex="-1")
  .row.no-gutters.row--search-bar
    .col-md-7
      ang-search([allowSearchInRes]="allowSearchInRes")

  .row
    .col-sm-12
      h3#pageType Browse Category

  .row
    div([ngClass]="catThumbnail ? 'col-sm-9' : 'col-sm-12'")
      h1#pageTitle.h1--title-block {{ catName }}
      p#pageDescription(*ngIf="catDescription", [innerHtml]="catDescription")

    .col-sm-3(*ngIf="catThumbnail")
      .thumbnail-shelf
        img.collection-thumb(src="http://viewer2.artstor.org{{ catThumbnail }}")
  ang-asset-grid([actionOptions]="{category: true}", [assetCount]="assetCount")
