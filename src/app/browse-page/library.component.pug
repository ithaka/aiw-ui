nav.nav.nav-inline.browse-nav
  a.label Browse By:&ensp;
  a.nav-link(*ngFor="let browseOpt of browseMenuArray", [ngClass]="{'active': browseOpt.id == selectedBrowseId}", (click)="selectBrowseOpt(browseOpt.id)") {{ browseOpt.label }}
.row
  .col-md-8
    ul.filter-list
      li.filter(*ngFor="let facet of categoryFacets")
        a.tag-link(*ngIf="facetQueryMap[facetType] == 'category'", [href]="'#/category/'+facet.name")
          | {{ facet.title }} ({{facet.count}})
        a.tag-link(*ngIf="facetQueryMap[facetType] != 'category'",[href]="'#/search/*;' + facetQueryMap[facetType] + '=' + encodeURIComponent(facet.name)") 
          | {{facet.name}} ({{facet.count}})
      li.filter(*ngFor="let key of JSObject.keys(hierarchicalFacets).sort()")
        a.tag-link([href]="'#/search/*;' + facetQueryMap[facetType] + '=' + hierarchicalFacets[key].element.efq") {{key}} ({{hierarchicalFacets[key].element.count}})
        ul
          li.filter(*ngFor="let childKey of JSObject.keys(hierarchicalFacets[key].children).sort()")
            a.tag-link([href]="'#/search/*;' + facetQueryMap[facetType] + '=' + hierarchicalFacets[key].children[childKey].element.efq") {{childKey}} ({{hierarchicalFacets[key].children[childKey].element.count}})
    //- ul.filter-list
    //-   li.filter(*ngFor)

    .alert.alert-danger(*ngIf="errorMessage" innerHTML="{{errorMessage | translate}}")
  .col-md-4
    .browse-info(*ngIf="descObj[selectedBrowseId]")
      .img(*ngIf="splashImgURL")
        img([attr.src]="splashImgURL", alt="Splash image for browse id: {{ selectedBrowseId }}", style="max-width:100%;")
      .title {{ descObj[selectedBrowseId].collectionname }}
      .browse__description([innerHTML]="descObj[selectedBrowseId].blurburl")
.row.has-icon-overlay(*ngIf="loading")
  i.icon-lg.icon-overlay--top.icon-loading-large
