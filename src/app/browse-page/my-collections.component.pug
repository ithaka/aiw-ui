nav.nav.nav-inline.browse-nav
.row
  .col-md-6
    .tree
      ang-tag(*ngFor="let tag of tags", [tag]="tag", [edit]="pcFeatureFlag", (editTag)="showEditModal(tag)")
      .add-pc-cntnr(*ngIf="(tags.length === 0) && pcFeatureFlag", (click)="showUploadImgsModal = true")
        .icon-cntnr
          i.icon.absolute-left.icon-add
            a My Personal Collections
  .col-md-6
    .mycol-info
      .img
        img(src="/assets/img/collection-splash.png", alt="Splash image for My Collections")
      .desc
        p Only you can see this collection. To share these images with others at your institution, add them to an image group. Learn more about Personal Collections.&nbsp;
          a(href="http://support.artstor.org/?article-category=09-using-your-own-images", target="_blank") http://support.artstor.org/?article-category=09-using-your-own-images
          |.
.row.has-icon-overlay(*ngIf="loading")
  i.icon-lg.icon-overlay--top.icon-loading-large
ang-upload-images(*ngIf="showUploadImgsModal", (closeModal)="showUploadImgsModal = false")
ang-edit-personal-collection(*ngIf="showEditPCModal", (closeModal)="showEditPCModal = false", [colId]="editTagId")
