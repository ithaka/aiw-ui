#mainContent.container.main-content(tabindex="0")
  .row
    .col-sm-6
      ang-login-form
    .col-sm-6(*ngIf="_app.config.showInstitutionalLogin")
      .card.card--v-pad
        .card-header
          h1#institutionHeading {{ 'LOGIN.INSTITUTION_LOGIN.HEADING' | translate }}
        .card-body
          .form-group
            label {{ 'LOGIN.INSTITUTION_LOGIN.SELECT_LABEL' | translate }}
            ng2-completer(
              [(ngModel)]="loginInstName",
              (keyup)="sortInstitution($event)",
              [datasource]="dataService",
              [minSearchLength]="0",
              [openOnFocus]="true",
              [placeholder]="'Type to search...'",
              [textSearching]="'Searching Institutions...'",
              [clearUnselected]="true",
              name="institutionSelector"
            )
            .login-errorMsg(*ngIf="instErrorMsg") {{ instErrorMsg | translate }}
          .form-group
            p.notranslate([innerHtml]="'LOGIN.TERMS' | translate")
            p.small {{ 'LOGIN.INSTITUTION_LOGIN.LIST_INFO' | translate }}
          .form-group
            button#btnLoginProxy.btn.btn-primary((click)="goToInstLogin()" type="submit" name="action" data-sc="account: institutional user log in" data-automation-component="artstor-institution-login-button")
              | {{ 'LOGIN.LOGIN_BTN' | translate }}
    .col-sm-6(*ngIf="_app.config.saharaLogin")
      .card.card--v-pad
        .card-header
          h1#saharaLoginHeading {{ copyBase + 'LOGIN.SAHARA_LOGIN.HEADING' | translate }}
        .card-body
          .form-group
            | #[a#linkLoginSaharaSS.link(tabindex="0", href="http://catalog.sharedshelf.artstor.org/login.html", target="_blank", data-automation-component="ss-login-link") Log in] to Forum
ang-pwd-reset-modal(*ngIf="showPwdModal", (closeModal)="showPwdModal = false")