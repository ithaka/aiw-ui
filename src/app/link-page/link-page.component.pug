#mainContent.container(tabindex="0")
  .row
    .col-1.col-md-2
    .col-10.col-md-8
      .text-right.mb-2
        .btn.btn-secondary((click)="navigateToRegister()", tabindex="0") {{ 'LINK_PAGE.REGISTER_OPTION' | translate }}
      .card.card--light
        .card-header
          h1#loginHeading {{ 'LINK_PAGE.LOGIN_HEADING' | translate }}
        .card-body
          ang-login-form([samlTokenId]="shibParams.samlTokenId", [copyModifier]="'SHIBBOLETH'")
          a#linkLoginResetModal.link((click)="showPwdModal = true", tabindex="0", class="link", data-automation-component="artstor-pw-reset-link") {{ 'LOGIN.REG_LOGIN.FORGOT_PW_PROMPT' | translate }}
ang-pwd-reset-modal(*ngIf="showPwdModal", (closeModal)="showPwdModal = false")