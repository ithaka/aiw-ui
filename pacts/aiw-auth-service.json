{
  "consumer": {
    "name": "aiw"
  },
  "provider": {
    "name": "auth-service"
  },
  "interactions": [
    {
      "description": "a request to update a user's allowSurvey",
      "request": {
        "method": "PUT",
        "path": "/api/v1/users",
        "body": {
          "allowSurvey": true
        },
        "matchingRules": {
          "$.body.allowSurvey": {
            "match": "type"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "a request to update a user's departmentRole",
